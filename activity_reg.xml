<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tejasvi7.myapplication.regActivity">

    <TextView
        android:text="Register below"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffaf35e6"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textSize="20sp"
        android:id="@+id/uname1"
        android:focusable="true"
        android:textColorHighlight="#bbaffdd6"
        android:textColorHint="#ffaf35e6"
        android:layout_marginTop="10dp"

        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:id="@+id/password1"
        android:textColorHighlight="#ffaf35e6"
        android:textColorHint="#ffaf35e6"

         />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:id="@+id/cPassword"
        android:textColorHighlight="#ffaf35e6"
        android:textColorHint="#ffaf35e6"

        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Email id"
        android:textSize="20sp"
        android:id="@+id/email"
        android:textColorHighlight="#ffaf35e6"
        android:textColorHint="#ffaf35e6"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Gender"
        android:textSize="20sp"
        android:id="@+id/gender"
        android:textColorHighlight="#ffaf35e6"
        android:textColorHint="#ffaf35e6"
        android:layout_marginTop="10dp"

        />

    <RadioButton
        android:text="Male"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/radioButton" />

    <RadioButton
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/radioButton2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Mobile Number"
        android:textSize="20sp"
        android:id="@+id/mNumber"
        android:textColorHighlight="#ffaf35e6"
        android:textColorHint="#ffaf35e6"

        />

    <Button
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:onClick="submit"
        android:id="@+id/button" />


</LinearLayout>
